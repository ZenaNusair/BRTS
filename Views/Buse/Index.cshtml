@model IEnumerable<BRTS_System.Models.Bus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Index" asp-controller="Trip">Go Trips</a>
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.captainname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberofSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.captainname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberofSeats)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.BusID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BusID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
